{
  $schema: 'https://docs.renovatebot.com/renovate-schema.json',
  extends: [
    'local>nemo/renovate-config//default.json5',
    'docker:enableMajor',
    'replacements:k8s-registry-move',
  ],
  nix: {
    enabled: false,
  },
  argocd: {
    managerFilePatterns: [
      '/(^|/)kubernetes/base/.+-app\\.yaml$/',
      '/(^|/)kubernetes/clusters/.+-app\\.yaml$/',
    ],
  },
  'helm-values': {
    managerFilePatterns: [
      '/(^|/)kubernetes/base/.+/helm-values\\.yaml$/',
    ],
  },
  kubernetes: {
    managerFilePatterns: [
      '/(^|/)\\.justfiles/.+\\.yaml$/',
      '/(^|/)kubernetes/.+\\.yaml$/',
    ],
  },
  ignorePaths: [
    '**/*.sops.*',
    '**/.archive/**',
    '**/resources/**',
  ],
  lockFileMaintenance: {
    enabled: false,
  },
  customManagers: [
    {
      customType: 'regex',
      description: 'Handle GitHub release URLs in Kustomize resources',
      managerFilePatterns: [
        '/kustomization\\.yaml$/',
      ],
      matchStrings: [
        '- https://github\\.com/(?<depName>[^/]+/[^/]+)/releases/download/v(?<currentValue>[^/]+)/',
      ],
      datasourceTemplate: 'github-releases',
    },
    {
      customType: 'regex',
      description: 'Handle OCI Helm charts in ArgoCD Applications',
      managerFilePatterns: [
        '/^kubernetes/base/.+\\.yaml$/',
        '/^kubernetes/clusters/.+\\.yaml$/',
      ],
      matchStrings: [
        '(?:-\\s+)?repoURL:\\s+oci://(?<depName>ghcr\\.io/[^\\s]+)\\s+targetRevision:\\s+(?<currentValue>[^\\s]+)',
      ],
      datasourceTemplate: 'docker',
    },
    {
      customType: 'regex',
      description: 'Update Docker images in Nix files with let bindings',
      managerFilePatterns: [
        '/\\.nix$/',
      ],
      matchStrings: [
        '\\s+image\\s*=\\s*"(?<depName>[^:]+):(?<currentValue>[^@]+)@(?<currentDigest>sha256:[a-f0-9]+)"',
      ],
      datasourceTemplate: 'docker',
      versioningTemplate: 'docker',
    },
  ],
  packageRules: [
    {
      description: 'Disable ArgoCD manager git-tags detection for OCI Helm charts (handled by regex manager)',
      matchManagers: [
        'argocd',
      ],
      matchDatasources: [
        'git-tags',
      ],
      matchPackageNames: [
        '/^oci://ghcr\\.io//',
      ],
      enabled: false,
    },
    {
      description: 'Group Immich updates (server + ML)',
      matchDatasources: [
        'docker',
      ],
      groupName: 'immich',
      matchPackageNames: [
        '/^ghcr.io/immich-app//',
      ],
    },
    {
      description: 'Group Arr stack updates (Sonarr, Radarr, Prowlarr)',
      matchDatasources: [
        'docker',
      ],
      groupName: 'arr-stack',
      matchPackageNames: [
        '/^lscr.io/linuxserver/(sonarr|radarr|prowlarr|lidarr|readarr)/',
      ],
    },
    {
      description: 'Group Home Assistant ecosystem',
      matchDatasources: [
        'docker',
      ],
      groupName: 'home-assistant',
      matchPackageNames: [
        '/^ghcr.io/home-assistant//',
        '/^ghcr.io/esphome//',
        '/^ghcr.io/zwave-js//',
      ],
    },
    {
      description: 'Group RTL-SDR tools (rtl_433, rtlamr)',
      matchDatasources: [
        'docker',
      ],
      groupName: 'rtl-sdr',
      matchPackageNames: [
        '/rtl_433/',
        '/rtlamr/',
      ],
    },
    {
      description: 'Update renovate only daily',
      extends: [
        'schedule:daily',
      ],
      matchPackageNames: [
        'ghcr.io/renovatebot/renovate',
      ],
      automerge: true,
    },
    {
      description: 'Block gluetun v3.40.2+ (breaks credential handling)',
      matchDatasources: [
        'docker',
      ],
      matchPackageNames: [
        'ghcr.io/qdm12/gluetun',
      ],
      allowedVersions: '<3.40.2',
    },
    {
      description: 'Pin Python to 3.12 for TensorFlow compatibility (TF lacks 3.13+ wheels)',
      matchDatasources: [
        'docker',
      ],
      matchPackageNames: [
        'python',
      ],
      allowedVersions: '<3.13',
    },
    {
      description: 'Pin digests for security-critical images',
      matchDatasources: [
        'docker',
      ],
      pinDigests: true,
      matchPackageNames: [
        '/ingress-nginx/',
        '/cert-manager/',
        '/external-secrets/',
        '/kube-vip/',
        '/external-dns/',
        '/cloudnative-pg/',
      ],
    },
  ],
}
