{
  $schema: 'https://docs.renovatebot.com/renovate-schema.json',
  extends: [
    'config:recommended',
    'docker:enableMajor',
    'replacements:k8s-registry-move',
    ':automergeBranch',
    ':disableRateLimiting',
    ':dependencyDashboard',
    ':semanticCommits',
    ':automergeRequireAllStatusChecksPassed',
    ':timezone(America/New_York)',
  ],
  // Enable vulnerability alerts via OSV database
  osvVulnerabilityAlerts: true,
  // Nix is disabled - flake.lock updates handled by Forgejo workflow
  nix: {
    enabled: false,
  },
  // ArgoCD Application manifests
  argocd: {
    managerFilePatterns: [
      '/(^|/)kubernetes/base/.+-app\\.yaml$/',
      '/(^|/)kubernetes/clusters/.+-app\\.yaml$/',
    ],
  },
  // Helm chart values files
  'helm-values': {
    managerFilePatterns: [
      '/(^|/)kubernetes/base/.+/helm-values\\.yaml$/',
    ],
  },
  // Kubernetes manifests
  kubernetes: {
    managerFilePatterns: [
      '/(^|/)\\.justfiles/.+\\.yaml$/',
      '/(^|/)kubernetes/.+\\.yaml$/',
    ],
  },
  ignorePaths: [
    '**/*.sops.*',
    '**/.archive/**',
    '**/resources/**',
  ],
  hostRules: [
    {
      description: 'Use GitHub token for GHCR authentication',
      hostType: 'docker',
      matchHost: 'ghcr.io',
    },
  ],
  // Lock file maintenance disabled - flake.lock handled by dedicated Forgejo workflow
  lockFileMaintenance: {
    enabled: false,
  },
  customManagers: [
    {
      customType: 'regex',
      description: 'Handle GitHub release URLs in Kustomize resources',
      managerFilePatterns: [
        '/kustomization\\.yaml$/',
      ],
      matchStrings: [
        '- https://github\\.com/(?<depName>[^/]+/[^/]+)/releases/download/v(?<currentValue>[^/]+)/',
      ],
      datasourceTemplate: 'github-releases',
    },
    {
      customType: 'regex',
      description: 'Handle OCI Helm charts in ArgoCD Applications',
      managerFilePatterns: [
        '/^kubernetes/base/.+\\.yaml$/',
        '/^kubernetes/clusters/.+\\.yaml$/',
      ],
      matchStrings: [
        '(?:-\\s+)?repoURL:\\s+oci://(?<depName>ghcr\\.io/[^\\s]+)\\s+targetRevision:\\s+(?<currentValue>[^\\s]+)',
      ],
      datasourceTemplate: 'docker',
    },
    {
      customType: 'regex',
      description: 'Update Docker images in Nix files with let bindings',
      managerFilePatterns: [
        '/\\.nix$/',
      ],
      matchStrings: [
        '\\s+image\\s*=\\s*"(?<depName>[^:]+):(?<currentValue>[^@]+)@(?<currentDigest>sha256:[a-f0-9]+)"',
      ],
      datasourceTemplate: 'docker',
      versioningTemplate: 'docker',
    },
  ],
  packageRules: [
    {
      description: 'Disable ArgoCD manager git-tags detection for OCI Helm charts (handled by regex manager)',
      matchManagers: [
        'argocd',
      ],
      matchDatasources: [
        'git-tags',
      ],
      enabled: false,
      matchPackageNames: [
        '/^oci://ghcr\\.io//',
      ],
    },
    // Grouping rules to reduce PR noise for related components
    {
      description: 'Group Immich updates (server + ML)',
      matchDatasources: ['docker'],
      matchPackagePatterns: ['^ghcr.io/immich-app/'],
      groupName: 'immich',
    },
    {
      description: 'Group Arr stack updates (Sonarr, Radarr, Prowlarr)',
      matchDatasources: ['docker'],
      matchPackagePatterns: ['^lscr.io/linuxserver/(sonarr|radarr|prowlarr|lidarr|readarr)'],
      groupName: 'arr-stack',
    },
    {
      description: 'Group Home Assistant ecosystem',
      matchDatasources: ['docker'],
      matchPackagePatterns: [
        '^ghcr.io/home-assistant/',
        '^ghcr.io/esphome/',
        '^ghcr.io/zwave-js/',
      ],
      groupName: 'home-assistant',
    },
    {
      description: 'Group RTL-SDR tools (rtl_433, rtlamr)',
      matchDatasources: ['docker'],
      matchPackagePatterns: ['rtl_433', 'rtlamr'],
      groupName: 'rtl-sdr',
    },
    {
      description: 'Require manual review for major updates',
      matchUpdateTypes: ['major'],
      automerge: false,
    },
    {
      description: 'Automerge minor and patch updates for stable versions',
      matchUpdateTypes: [
        'minor',
        'patch',
      ],
      matchCurrentVersion: '!/^0/',
      automerge: true,
    },
    {
      description: 'Update renovate only daily',
      extends: [
        'schedule:daily',
      ],
      matchDepNames: [
        'ghcr.io/renovatebot/renovate',
      ],
      automerge: true,
    },
    {
      description: 'Block gluetun v3.40.2+ (breaks credential handling)',
      matchDatasources: [
        'docker',
      ],
      matchPackageNames: [
        'ghcr.io/qdm12/gluetun',
      ],
      allowedVersions: '<3.40.2',
      enabled: true,
    },
    {
      description: 'Pin actions/checkout to v5 (v6 incompatible with Forgejo runners)',
      matchManagers: ['github-actions'],
      matchPackageNames: ['actions/checkout'],
      allowedVersions: '<6',
    },
    {
      description: 'Pin Python to 3.12 for TensorFlow compatibility (TF lacks 3.13+ wheels)',
      matchDatasources: [
        'docker',
      ],
      matchPackageNames: [
        'python',
      ],
      allowedVersions: '<3.13',
    },
    // Pin digests for security-critical infrastructure images
    {
      description: 'Pin digests for security-critical images',
      matchDatasources: ['docker'],
      matchPackagePatterns: [
        'ingress-nginx',
        'cert-manager',
        'external-secrets',
        'kube-vip',
        'external-dns',
        'cloudnative-pg',
      ],
      pinDigests: true,
    },
  ],
}
